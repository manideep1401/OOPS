1st--

class Book {
    String title;
    String authur;
    int yearofpublication;

    Book(String title, String authur, int yearofpublication){
        this.title = title;
        this.authur = authur;
        this.yearofpublication = yearofpublication;

    }

    void  display(){

        System.out.println("Title: "+title);
        System.out.println("Authur: "+authur);
        System.out.println("Year of Publication: "+yearofpublication);
    }



    public static void main(String[] args) {

        Book b1 = new Book("Harry Potter", "J.K. Rowling", 1997);
        Book b2 = new Book("The Lord of the Rings", "J.R.R. Tolki" ,1999);

        b1.display();
        b2.display();
    }
}
//end

